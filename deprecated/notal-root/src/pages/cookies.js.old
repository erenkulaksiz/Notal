export async function getServerSideProps(ctx) {
    const { req, res, query } = ctx;
    let validate = {};

    if (req) {
        const authCookie = req.cookies.auth;

        [validate] = await Promise.all([
            ValidateToken({ token: authCookie })
        ]);
    }
    return { props: { validate } }
}