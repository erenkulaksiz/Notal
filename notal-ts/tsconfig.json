{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@components": ["./components"],
      "@icons": ["./icons"],
      "@utils/*": ["./utils/*"],
      "@utils": ["./utils"],
      "@public/*": ["../public/*"],
      "@services/*": ["./services/*"],
      "@services": ["./services"],
      "@hooks/*": ["./hooks/*"],
      "@hooks": ["./hooks"],
      "@api/*": ["./api/*"],
      "@lib/*": ["./lib/*"],
      "@constants/*": ["./constants/*"],
      "@constants": ["./constants"],
      "@types/*": ["./types/*"],
      "@types": ["./types"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "jest.config.js"],
  "exclude": ["node_modules"]
}
